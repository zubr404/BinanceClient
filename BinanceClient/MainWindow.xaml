                        </Grid>
                    </Grid>-->
                </Grid>
            </Border>



            <!--Right panel-->
            <Border Grid.Column="2" Grid.RowSpan="2" BorderThickness="0.25,0,0,0" BorderBrush="{StaticResource SolidGray}">
                <Grid>
                    <Grid.Resources>
                        <sys:Double x:Key="HeightButton">68</sys:Double>
                    </Grid.Resources>

                    <Grid.Background>
                        <StaticResource ResourceKey="DarkBrown"/>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Height="{StaticResource HeightUpperPanel}" VerticalContentAlignment="Bottom" Foreground="White" FontSize="14" Padding="15,0,0,15" Content="Информация о конфигах"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.15*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Style="{StaticResource RectangleButtonMy}" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeButtonRight}"
                                Height="{StaticResource HeightButton}" HorizontalContentAlignment="Left" BorderBrush="{StaticResource SolidGray}" BorderThickness="0,0.5,0,0.25"
                                Background="#161515" Command="{Binding CentralPanelScrin1.BTCUSD_LONGCommand}">
                            <TextBlock Margin="15,0,0,0"><Run Text="BTCUSD_LONG"/></TextBlock>
                        </Button>
                        <Button Grid.Column="2" Style="{StaticResource RectangleButtonMy}" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeButtonRight}"
                                Height="{StaticResource HeightButton}" HorizontalContentAlignment="Left" BorderBrush="{StaticResource SolidGray}" BorderThickness="0,0.5,0,0.25"
                                Background="#161515" Command="{Binding CentralPanelScrin1.BTCUSD_LONGShowCommand}">
                            <TextBlock Margin="6,0,0,0" FontSize="12" RenderTransformOrigin="0.5,0.5">
                                <TextBlock.LayoutTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </TextBlock.LayoutTransform>
                                <TextBlock.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform X="0"/>
                                    </TransformGroup>
                                </TextBlock.RenderTransform><Run Text="Показать"/></TextBlock>
                        </Button>
                        <Rectangle Width="2" Fill="{Binding RightPanelScrin1.BTCUSD_LONG.BrushBackground}"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.15*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Style="{StaticResource RectangleButtonMy}" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeButtonRight}"
                                Height="{StaticResource HeightButton}" HorizontalContentAlignment="Left" BorderBrush="{StaticResource SolidGray}" BorderThickness="0,0.5,0,0.25"
                                Background="#161515" Command="{Binding CentralPanelScrin1.BTCUSD_SHORTCommand}">
                            <TextBlock Margin="15,0,0,0"><Run Text="BTCUSD_SHORT"/></TextBlock>
                        </Button>
                        <Button Grid.Column="2" Style="{StaticResource RectangleButtonMy}" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeButtonRight}"
                                Height="{StaticResource HeightButton}" HorizontalContentAlignment="Left" BorderBrush="{StaticResource SolidGray}" BorderThickness="0,0.5,0,0.25"
                                Background="#161515" Command="{Binding CentralPanelScrin1.BTCUSD_SHORTShowCommand}">
                            <TextBlock Margin="6,0,0,0" FontSize="12" RenderTransformOrigin="0.5,0.5">
                                <TextBlock.LayoutTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </TextBlock.LayoutTransform>
                                <TextBlock.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform X="0"/>
                                    </TransformGroup>
                                </TextBlock.RenderTransform><Run Text="Показать"/></TextBlock>
                        </Button>
                        <Rectangle Width="2" Fill="{Binding RightPanelScrin1.BTCUSD_SHORT.BrushBackground}"/>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.15*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Style="{StaticResource RectangleButtonMy}" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeButtonRight}"
                                Height="{StaticResource HeightButton}" HorizontalContentAlignment="Left" BorderBrush="{StaticResource SolidGray}" BorderThickness="0,0.5,0,0.5"
                                Background="#161515" Command="{Binding CentralPanelScrin1.ETHUSD_SHORTCommand}">
                            <TextBlock Margin="15,0,0,0"><Run Text="ETHUSD_SHORT"/></TextBlock>
                        </Button>
                        <Button Grid.Column="2" Style="{StaticResource RectangleButtonMy}" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeButtonRight}"
                                Height="{StaticResource HeightButton}" HorizontalContentAlignment="Left" BorderBrush="{StaticResource SolidGray}" BorderThickness="0,0.5,0,0.25"
                                Background="#161515" Command="{Binding CentralPanelScrin1.ETHUSD_SHORTShowCommand}">
                            <TextBlock Margin="6,0,0,0" FontSize="12" RenderTransformOrigin="0.5,0.5">
                                <TextBlock.LayoutTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </TextBlock.LayoutTransform>
                                <TextBlock.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform X="0"/>
                                    </TransformGroup>
                                </TextBlock.RenderTransform><Run Text="Показать"/></TextBlock>
                        </Button>
                        <Rectangle Width="2" Fill="{Binding RightPanelScrin1.ETHUSD_SHORT.BrushBackground}"/>
                    </Grid>

                    <Label Grid.Row="4" Height="40" VerticalContentAlignment="Bottom" Foreground="White" FontSize="{StaticResource FontSizeLabelConsole}" Padding="15,0,0,5" Content="Консоль"/>

                    <ScrollViewer Grid.Row="5" VerticalScrollBarVisibility="Hidden">
                        <TextBlock Text="{Binding ConsoleScrin1.Message}"  Foreground="{StaticResource SolidGreen}"
                                   Padding="15,0,0,0" TextWrapping="WrapWithOverflow" FontSize="{StaticResource FontSizeConsole}"/>
                    </ScrollViewer>

                </Grid>
            </Border>

            <!--Pair connected panel  {Binding ScrinManager.ScrinPairConnected.Visibility}-->
            <Grid Grid.Column="1" Grid.Row="1" Background="{StaticResource Brown}" Visibility="{Binding ScrinManager.ScrinPairConnected.Visibility}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Grid.Row="1" Width="250" Height="680" VerticalScrollBarVisibility="Hidden" AutoGenerateColumns="False" CanUserAddRows="False" BorderThickness="0" RowHeaderWidth="0"
                              Background="{StaticResource DarkBrown}" ItemsSource="{Binding PairPanelScrin1.ConnectedPairs}" Margin="0"
                              GridLinesVisibility="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left"
                              VerticalGridLinesBrush="Transparent" RenderOptions.EdgeMode="Unspecified" FontSize="10" Foreground="{StaticResource SolidGray}">
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Background" Value="{StaticResource DarkBrown}" />
                                <Setter Property="Height" Value="20"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DarkBrownCurrentStatisticGrid}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DarkBrownCurrentStatisticGrid}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Setter Property="BorderThickness" Value="0,0,0.25,0"/>
                                <Setter Property="BorderBrush" Value="{StaticResource SolidGray}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DarkBrownCurrentStatisticGrid}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DarkBrownCurrentStatisticGrid}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Base" Width="*" Binding="{Binding BaseAsset}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Quote" Width="*" Binding="{Binding QuoteAsset}" IsReadOnly="True"/>
                            <DataGridCheckBoxColumn Header="On/Off" Width="*" Binding="{Binding IsActive, Mode=TwoWay}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <Button Style="{StaticResource RectangleButtonMy}" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeButtonRight}"
                                Height="60" HorizontalContentAlignment="Center" BorderBrush="{StaticResource SolidGray}" BorderThickness="0,0.5,0,0.25"
                                Background="#161515" Command="{Binding PairPanelScrin1.ApplyCommand}" Content="APPLY"/>
                    </StackPanel>
