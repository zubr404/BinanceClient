                    <!--Калькулятор-->
                    <Grid Grid.Row="3" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="3"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="0,6,0,6">
                            <Button Background="{x:Null}" BorderBrush="{x:Null}" Height="{StaticResource HeightButton}" Style="{StaticResource RectangleButtonMy}" Command="{Binding CaltulatorButtonCommand}">
                                <StackPanel>
                                    <Grid>
                                        <Rectangle Height="27" Width="20" Fill="{Binding LeftPanelScrin1.CalculatorButton.BrushBackground}"/>
                                        <Grid HorizontalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Rectangle Grid.ColumnSpan="3" Height="5" Width="15" Fill="{StaticResource Brown}" VerticalAlignment="Top" Margin="0,2.5,0,0"/>
                                            <Rectangle Grid.Row="1" Height="3" Width="3" Fill="{StaticResource Brown}" HorizontalAlignment="Left"/>
                                            <Rectangle Grid.Row="1" Grid.Column="1" Height="3" Width="3" Fill="{StaticResource Brown}" HorizontalAlignment="Center"/>
                                            <Rectangle Grid.Row="1" Grid.Column="2" Height="3" Width="3" Fill="{StaticResource Brown}" HorizontalAlignment="Right"/>

                                            <Rectangle Grid.Row="2" Height="3" Width="3" Fill="{StaticResource Brown}" HorizontalAlignment="Left"/>
                                            <Rectangle Grid.Row="2" Grid.Column="1" Height="3" Width="3" Fill="{StaticResource Brown}" HorizontalAlignment="Center"/>
                                            <Rectangle Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Height="10" Width="3" Fill="{StaticResource Brown}" HorizontalAlignment="Right"/>

                                            <Rectangle Grid.Row="3" Height="3" Width="3" Fill="{StaticResource Brown}" HorizontalAlignment="Left"/>
                                            <Rectangle Grid.Row="3" Grid.Column="1" Height="3" Width="3" Fill="{StaticResource Brown}" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                    <Label Foreground="{Binding LeftPanelScrin1.CalculatorButton.BrushBackground}" Padding="0" HorizontalContentAlignment="Center" Content="Калькулятор"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <Grid Grid.Column="1" Visibility="Visible">
                            <Rectangle RadiusY="2" RadiusX="3" Fill="{Binding LeftPanelScrin1.CalculatorButton.BrushBackground}"/>
                            <Rectangle Width="1" HorizontalAlignment="Right" Fill="{Binding LeftPanelScrin1.CalculatorButton.BrushBackground}"/>
                        </Grid>
                    </Grid>

