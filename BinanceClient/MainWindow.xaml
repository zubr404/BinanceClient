<Window x:Class="BinanceClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinanceClient"
        mc:Ignorable="d"
        Title="MT Terminal" Height="800" Width="1280">
    <Grid>
        <Grid Name="Screen1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="237"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="72"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <!--Upper panel-->
            <Grid Grid.Column="1"  Background="#FF232323">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Start-->
                <StackPanel Margin="20,10,0,0">
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource ButtonMy}">
                        <Grid>
                            <Ellipse Height="34" Width="34" Stroke="#FF79FD83" StrokeThickness="1.2">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="#FF79FD83" Opacity="0.145"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Grid HorizontalAlignment="Center" Height="10" Width="10">
                                <Polygon Fill="#FF79FD83" Points="2, 0, 2, 10, 10, 5"></Polygon>
                            </Grid>
                        </Grid>
                    </Button>
                    
                    <Label Foreground="#FF79FD83">Start</Label>
                </StackPanel>
                
                <!--Stop-->
                <StackPanel Grid.Column="1" Margin="42,10,0,0">
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource ButtonMy}">
                        <Grid>
                            <Ellipse Height="34" Width="34" Stroke="#FFCE3C3C" StrokeThickness="1.2">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="#FFCE3C3C" Opacity="0.145"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Rectangle Height="10" Width="10" Fill="#FFCE3C3C"></Rectangle>
                        </Grid>
                    </Button>

                    <Label Foreground="#FFCE3C3C">Stop</Label>
                </StackPanel>
                
                <!--Apply-->
                <StackPanel Grid.Column="2" Margin="42,10,0,0">
                    <Button Height="34" Width="34" Background="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource ButtonMy}">
                        <Grid>
                            <Ellipse Height="34" Width="34" Stroke="#FFF3D95B" StrokeThickness="1.2">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="#FFF3D95B" Opacity="0.145"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Grid HorizontalAlignment="Center" Height="18" Width="16">
                                <Polyline Points="0,9,8,18,16,9" Stroke="#FFF3D95B"></Polyline>
                                <Line X1="8" Y1="18" X2="8" Y2="0" Stroke="#FFF3D95B"></Line>
                            </Grid>
                        </Grid>
                    </Button>

                    <Label Foreground="#FFF3D95B">Apply</Label>
                </StackPanel>
            </Grid>

            <!--Left panel-->
            <Grid Grid.RowSpan="2" Background="#FF232323">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Margin="20">
                    <Grid>
                        <Ellipse Height="35" Width="35" Fill="#FFF4BB50"></Ellipse>
                        <Rectangle Height="19" Width="14" Fill="#FF232323"></Rectangle>
                        <Rectangle Height="36" Width="6" Fill="#FF232323"></Rectangle>
                    </Grid>
                </StackPanel>


            </Grid>
            
            
            <!--Right panel-->
            <Grid Grid.Column="2" Grid.RowSpan="2"  Background="#FF232323">
                
            </Grid>
            
            <!--Centr Panel-->
            <Grid Grid.Column="1" Grid.Row="1"  Background="#FF313132">
                
            </Grid>

        </Grid>
    </Grid>
</Window>
