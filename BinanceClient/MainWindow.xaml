                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Grid>
                                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5" Opacity="1">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost" Foreground="{TemplateBinding Foreground}" BorderThickness="0" IsTabStop="False" Margin="0" Padding="{TemplateBinding Padding}"/>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Grid.Resources>
                        
                        <Label FontSize="{StaticResource FontSizeLabelConsole}" Foreground="{StaticResource SolidWhite}">Управление балансами ключей</Label>

                        <Border Grid.Row="1" Background="{StaticResource DarkBrown}">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <!--Buy panel-->
                                <Grid Grid.Column="0" Margin="10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        
                                        <Label Grid.Row="0" Foreground="{StaticResource SolidWhite}" FontSize="{StaticResource FontSizeLabelConsole}" Padding="5,5,5,0">Buy</Label>
                                        <Label Grid.Row="1" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeConsole}" Padding="5,0,3,3">Pair</Label>
                                        
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox Grid.Column="0" Style="{StaticResource ComboBoxBuySell}" Height="Auto" Width="Auto" Foreground="#c3c3c5" FontSize="21" HorizontalAlignment="Stretch"
                              ItemsSource="{Binding KeyPanelScrin1.ParametrBuy.Coins}" SelectedItem="{Binding KeyPanelScrin1.ParametrBuy.MainCoin, Mode=TwoWay}"></ComboBox>
                                            <ComboBox Grid.Column="1" Style="{StaticResource ComboBoxBuySell}" Height="Auto" Width="Auto" Foreground="#c3c3c5" FontSize="21" HorizontalAlignment="Stretch"
                              ItemsSource="{Binding KeyPanelScrin1.ParametrBuy.Coins}" SelectedItem="{Binding KeyPanelScrin1.ParametrBuy.AltCoin, Mode=TwoWay}"></ComboBox>
                                        </Grid>

                                        <Label Grid.Row="3" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeConsole}" Padding="5,8,5,3">Price</Label>
                                        <TextBox Grid.Row="4" Grid.Column="3" Text="{Binding KeyPanelScrin1.ParametrBuy.Price, Mode=TwoWay}" MaxLength="15"/>

                                        <Label Grid.Row="5" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeConsole}" Padding="5,8,5,3">Amount</Label>
                                        <TextBox Grid.Row="6" Grid.Column="3" Text="{Binding KeyPanelScrin1.ParametrBuy.Amount, Mode=TwoWay}" MaxLength="15"/>

                                        <Button Grid.Row="7" Style="{StaticResource ElipseButtonMy}" Background="#FF43A447" Foreground="{StaticResource SolidWhite}" FontSize="{StaticResource FontSizeLabelConsole}" FontWeight="Bold" Margin="0,8,0,0" Command="{Binding KeyPanelScrin1.BuyCommand}" IsEnabled="{Binding KeyPanelScrin1.ParametrBuy.IsEnabled}">BUY</Button>
                                    </Grid>
                                </Grid>

                                <!--Sell panel-->
                                <Grid Grid.Column="1" Margin="10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Label Grid.Row="0" Foreground="{StaticResource SolidWhite}" FontSize="{StaticResource FontSizeLabelConsole}" Padding="5,5,5,0">Sell</Label>
                                        <Label Grid.Row="1" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeConsole}" Padding="5,0,3,3">Pair</Label>

                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox Grid.Column="0" Style="{StaticResource ComboBoxBuySell}" Height="Auto" Width="Auto" Foreground="#c3c3c5" FontSize="21" HorizontalAlignment="Stretch"
                              ItemsSource="{Binding KeyPanelScrin1.ParametrSell.Coins}" SelectedItem="{Binding KeyPanelScrin1.ParametrSell.MainCoin, Mode=TwoWay}"></ComboBox>
                                            <ComboBox Grid.Column="1" Style="{StaticResource ComboBoxBuySell}" Height="Auto" Width="Auto" Foreground="#c3c3c5" FontSize="21" HorizontalAlignment="Stretch"
                              ItemsSource="{Binding KeyPanelScrin1.ParametrSell.Coins}" SelectedItem="{Binding KeyPanelScrin1.ParametrSell.AltCoin, Mode=TwoWay}"></ComboBox>
                                        </Grid>

                                        <Label Grid.Row="3" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeConsole}" Padding="5,8,5,3">Price</Label>
                                        <TextBox Grid.Row="4" Grid.Column="3" Text="{Binding KeyPanelScrin1.ParametrSell.Price, Mode=TwoWay}" MaxLength="15"/>

                                        <Label Grid.Row="5" Foreground="{StaticResource SolidGray}" FontSize="{StaticResource FontSizeConsole}" Padding="5,8,5,3">Amount</Label>
                                        <TextBox Grid.Row="6" Grid.Column="3" Text="{Binding KeyPanelScrin1.ParametrSell.Amount, Mode=TwoWay}" MaxLength="15"/>

                                        <Button Grid.Row="7" Style="{StaticResource ElipseButtonMy}" Background="#FFAC3333" Foreground="{StaticResource SolidWhite}" FontSize="{StaticResource FontSizeLabelConsole}" FontWeight="Bold" Margin="0,8,0,0" Command="{Binding KeyPanelScrin1.SellCommand}" IsEnabled="{Binding KeyPanelScrin1.ParametrSell.IsEnabled}">SELL</Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</Window>
