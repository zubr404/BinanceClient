<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:BinanceClient"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" x:Class="BinanceClient.MainWindow"
        Title="MT Terminal" Height="800" Width="1280" Loaded="Window_Loaded">
    <Window.Resources>
        <local:ModelView x:Key="ViewModel"/>
        <sys:Double x:Key="HeightUpperPanel">72</sys:Double>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModel}"/>
    </Window.DataContext>
    <Grid>
        <Grid x:Name="Screen1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="237"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Upper panel-->
            <Grid Grid.Column="1" Height="{StaticResource HeightUpperPanel}" Background="{StaticResource DarkBrown}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Start-->
                <StackPanel Margin="20,10,0,0">
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" IsEnabled="{Binding CentralPanelScrin1.StartButton.IsEnabled}" Style="{StaticResource CyrcleButtonMy}" Command="{Binding CentralPanelScrin1.StartCommand}">
                        <Grid>
                            <Ellipse Height="34" Width="34" Stroke="{StaticResource SolidGreen}" StrokeThickness="1.2">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="{StaticResource ColorGreen}" Opacity="0.145"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Grid HorizontalAlignment="Center" Height="10" Width="10">
                                <Polygon Fill="{StaticResource SolidGreen}" Points="2,0 2,10 10,5"/>
                            </Grid>
                        </Grid>
                    </Button>
                    <Label Foreground="{StaticResource SolidGreen}" Content="Start"/>
                </StackPanel>

                <!--Stop-->
                <StackPanel Grid.Column="1" Margin="42,10,0,0">
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource CyrcleButtonMy}" Command="{Binding CentralPanelScrin1.StopCommand}">
                        <Grid>
                            <Ellipse Height="34" Width="34" Stroke="{StaticResource SolidRed}" StrokeThickness="1.2">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="{StaticResource ColorRed}" Opacity="0.145"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Rectangle Height="10" Width="10" Fill="{StaticResource SolidRed}"/>
                        </Grid>
                    </Button>

                    <Label Foreground="{StaticResource SolidRed}" Content="Stop"/>
                </StackPanel>

                <!--Apply-->
                <StackPanel Grid.Column="2" Margin="42,10,0,0">
                    <Button Height="34" Width="34" Background="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource CyrcleButtonMy}" 
                            Command="{Binding CentralPanelScrin1.ApplyCommand}">
                        <Grid>
                            <Ellipse Height="34" Width="34" Stroke="{StaticResource SolidYellow}" StrokeThickness="1.2">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="{StaticResource ColorYellow}" Opacity="0.145"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Grid HorizontalAlignment="Center" Height="18" Width="16">
                                <Polyline Points="0,9 8,18 16,9" Stroke="{StaticResource SolidYellow}"/>
                                <Line X1="8" Y1="18" X2="8" Y2="0" Stroke="{StaticResource SolidYellow}"/>
                            </Grid>
                        </Grid>
                    </Button>

                    <Label Foreground="{StaticResource SolidYellow}" Content="Apply"/>
                </StackPanel>


                <StackPanel Grid.Column="4" Margin="0,0,25,0" Orientation="Horizontal" Visibility="Visible" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!--API key-->
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Width="60" Style="{StaticResource RectangleButtonMy}" Command="{Binding ApiKeyCommand}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Grid>
                                    <Rectangle Height="20" Width="8" HorizontalAlignment="Left" RadiusX="3" RadiusY="3"
                                           Margin="0,5,0,5" Fill="{StaticResource SolidGray}"/>
                                    <Rectangle Height="30" Width="2" HorizontalAlignment="Left" Margin="3,0,0,0" Fill="{StaticResource SolidGray}"/>
                                    <Rectangle Height="3" Fill="{StaticResource DarkBrown}"/>
                                </Grid>
                                <Grid Margin="2,0,0,0">
                                    <Rectangle Height="20" Width="8" HorizontalAlignment="Left" RadiusX="3" RadiusY="3"
                                           Margin="0,5,0,5" Fill="{StaticResource SolidGray}"/>
                                    <Rectangle Height="30" Width="2" HorizontalAlignment="Left" Margin="3,0,0,0" Fill="{StaticResource SolidGray}"/>
                                    <Rectangle Height="3" Fill="{StaticResource DarkBrown}"/>
                                </Grid>
                                <Grid Margin="2,0,0,0">
                                    <Rectangle Height="20" Width="8" HorizontalAlignment="Left" RadiusX="3" RadiusY="3"
                                           Margin="0,5,0,5" Fill="{StaticResource SolidGray}"/>
                                    <Rectangle Height="30" Width="2" HorizontalAlignment="Left" Margin="3,0,0,0" Fill="{StaticResource SolidGray}"/>
                                    <Rectangle Height="3" Fill="{StaticResource DarkBrown}"/>
                                </Grid>
                            </StackPanel>

                            <Label Grid.Row="1" Foreground="{StaticResource SolidGray}" Content="API ключи"/>
                        </Grid>
                    </Button>

                    <!--Pairs-->
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Width="60" Style="{StaticResource RectangleButtonMy}" Command="{Binding PairCommand}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid>
                                <Ellipse Height="33" Width="33" StrokeThickness="3" Stroke="Gray"/>
                                <TextBlock Margin="1,0,0,1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontSize="20" FontFamily="Times New Roman"><Run Text="B"/></TextBlock>
                            </Grid>

                            <Label Grid.Row="1" Foreground="{StaticResource SolidGray}" Content="PAIRS"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>

            <!--Left panel-->
            <Border Grid.RowSpan="2" BorderThickness="0,0,0.25,0">
                <Grid>
                    <Grid.Resources>
                        <sys:Double x:Key="HeightButton">80</sys:Double>
                    </Grid.Resources>

                    <Grid.Background>
                        <StaticResource ResourceKey="DarkBrown"/>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Margin="20">
                        <Grid>
                            <Ellipse Height="35" Width="35" Fill="{StaticResource SolidYellow}"/>
                            <Rectangle Height="19" Width="14" Fill="{StaticResource DarkBrown}"/>
                            <Rectangle Height="36" Width="6" Fill="{StaticResource DarkBrown}"/>
                        </Grid>
                    </StackPanel>

                    <!--Главная-->
                    <Grid Grid.Row="1" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="3"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="0,6,0,6">
                            <Button Background="{x:Null}" BorderBrush="{x:Null}" Height="{StaticResource HeightButton}" Style="{StaticResource RectangleButtonMy}" Command="{Binding MainButtonCommand}">
                                <StackPanel>
                                    <Grid>
                                        <StackPanel>
                                            <Polygon Fill="{Binding LeftPanelScrin1.MainButton.BrushBackground}" Points="10,0 0,10 20,10" HorizontalAlignment="Center"/>
                                            <Rectangle Height="9" Width="16" Fill="{Binding LeftPanelScrin1.MainButton.BrushBackground}"/>
                                        </StackPanel>
                                        <Rectangle Height="6" Width="5" VerticalAlignment="Bottom" Fill="{StaticResource Brown}"/>
                                    </Grid>
                                    <Label Foreground="{Binding LeftPanelScrin1.MainButton.BrushBackground}" Padding="0" HorizontalContentAlignment="Center" Content="Главная"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <Grid Grid.Column="1" Visibility="Visible">
                            <Rectangle RadiusY="2" RadiusX="3" Fill="{Binding LeftPanelScrin1.MainButton.BrushBackground}"/>
                            <Rectangle Width="1" HorizontalAlignment="Right" Fill="{Binding LeftPanelScrin1.MainButton.BrushBackground}"/>
                        </Grid>
                    </Grid>

                    <!--Текущая статистика-->
